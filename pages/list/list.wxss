.forecastItem {
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.date-item:last-child {
  border-bottom: none;
}
.week {
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx;
}
.date {
  opacity: 0.5;
  font-size: 25rpx;
  line-height: 35rpx;
}
.forecastIcon {
  width: 90rpx;
  height: 90rpx;
}
.forecastTemp {
  flex-grow: 1;
  padding-right: 60;
  opacity: 0.8;
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx; 
}